      <div class="column has-background-info-light is-clickable day5 date-box" data-habit-id="{{id}}"></div>
      <div class="column has-background-info-light is-clickable day6 date-box" data-habit-id="{{id}}"></div>
      <div class="column has-background-info-light is-clickable day7 date-box" data-habit-id="{{id}}"></div>
    </div>
  </div>
