        <div class="column has-background-grey-light is-clickable day3 date-box" data-habit-id="{{id}}"></div>
        <div class="column has-background-grey-light is-clickable day4 date-box" data-habit-id="{{id}}"></div>
        <div class="column has-background-grey-light is-clickable day5 date-box" data-habit-id="{{id}}"></div>
        <div class="column has-background-grey-light is-clickable day6 date-box" data-habit-id="{{id}}"></div>
